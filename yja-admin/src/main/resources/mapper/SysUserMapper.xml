<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yj.admin.mapper.SysUserMapper">

    <!-- 用户表单信息映射 -->
    <resultMap id="UserFormMap" type="com.yj.core.model.bo.UserFormBO">
        <id property="id" column="id" jdbcType="VARCHAR"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="nickname" column="nickname" jdbcType="VARCHAR"/>
        <result property="mobile" column="mobile" jdbcType="VARCHAR"/>
        <result property="gender" column="gender" jdbcType="TINYINT"/>
        <result property="avatar" column="avatar" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="BOOLEAN"/>
        <result property="deptId" column="dept_id" jdbcType="BIGINT"></result>
        <collection
                property="roleIds"
                column="id"
                select="com.yj.admin.mapper.SysUserRoleMapper.listRoleIdsByUserId" >
            <result column="role_id" />
        </collection>
    </resultMap>



    <!-- 用户认证信息映射 -->
    <resultMap id="UserAuthMap" type="com.yj.core.model.dto.UserAuthInfo">
        <id property="userId" column="userId" jdbcType="VARCHAR"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="BOOLEAN"/>
        <result property="deptId" column="dept_id" jdbcType="VARCHAR"></result>
        <collection property="roles" ofType="string" javaType="java.util.Set">
            <result column="roleno"></result>
        </collection>
    </resultMap>

    <!-- 根据用户名获取认证信息 -->
    <select id="getUserAuthInfo" resultMap="UserAuthMap">
        SELECT
            t1.id userId,
            t1.username,
            t1.nick_name,
            t1.PASSWORD,
            t1.STATUS,
            t1.dept_id ,
            t3.roleno
        FROM
            yja_user t1
                LEFT JOIN yja_user_role t2 ON t2.user_id = t1.id
                LEFT JOIN yja_role t3 ON t3.id = t2.role_id
        WHERE
            t1.userid = #{username} AND t1.deleted=0
    </select>

</mapper>
